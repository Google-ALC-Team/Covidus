<form action="" method="post" class="form-signin">

  {{#each errorMessages}}
  <div class="alert alert-danger">
    {{this.msg}}

  </div>
  {{/each}}
    <h2 class="form-signin-heading text-center">Please Sign up</h2>
    <br/>

    <input type="text" name="name" id="" class="form-control" placeholder="Name" require="" autofocus="">
    <br/>
    <input type="email" name="email" id="" class="form-control" placeholder="Email" require="" autofocus="">
    <br/>
    <input type="password" name="password" id="" class="form-control" placeholder="Password" require="" >
    <br/>
    {{!-- <input type="password" name="password2" id="" class="form-control" placeholder="Confirm password" require="" autofocus="">
    <br/> --}}
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign up</button>
    <br/>
    <h4 class="text-center">Or</h4>
    <br/>
    <a href="/auth/facebook" class="btn btn-lg btn-success btn-block">Sign Up with Facebook</a>
</form>